{
  "name": "social-network-server",
  "version": "1.0.0",
  "description": "Social Network API Server with TypeScript, Express, and MongoDB",
  "main": "dist/src/server.js",
  "scripts": {
    "start": "node --env-file=.env ./dist/src/server.js",
    "start:dev": "cross-env NODE_ENV=development nodemon ./src/server.ts",
    "start:prod": "cross-env NODE_ENV=production node --env-file=.env ./dist/src/server.js",
    "dev": "nodemon --exec ts-node ./src/server.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "tsc && cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit",
    "test:auth": "tsc && cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit src/tests/auth.test.ts",
    "test:posts": "tsc && cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit src/tests/posts.test.ts",
    "test:comments": "tsc && cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit src/tests/comments.test.ts",
    "test:users": "tsc && cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit src/tests/users.test.ts",
    "test:coverage": "tsc && cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit --coverage",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs"
  },
  "author": "amit and jonatan",
  "license": "ISC",
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.19.3",
    "multer": "^2.0.2",
    "pg": "^8.18.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.1",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
